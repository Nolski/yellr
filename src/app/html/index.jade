doctype html
head
  meta(charset="utf-8")
  meta(name="format-detection", content="telephone=no")
  meta(name="viewport", content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height")
  meta(name="msapplication-tap-highlight", content="no")
  title Yellr
  link(rel="stylesheet", href="style/style.min.css")
  script(src="js/libs/modernizr.js")

body#app
  div.container

    //- app headers
    include _header.jade

    //- main content area
    div#main.pt-perspective
      div.pt-page.has-subnav#assignments
        include assignments.jade

      div.pt-page#view-assignment
        include view-assignment.jade

      div.pt-page.has-subnav#news-feed
        include news-feed.jade

      div.pt-page#view-news
        include view-news.jade

      div.pt-page#profile
        include profile.jade

      div.pt-page#notifications
        include notifications.jade

      div.pt-page#messages
        include messages.jade

      div.pt-page#view-message
        include view-message.jade

      div.pt-page#reply-message
        section#reply-message-wrapper

      div.pt-page#report
        include report.jade

      div.pt-page#debug
        include _debug.jade
    //- end main

    //- app footer
    include _footer.jade

  div#overlay-container
    div.vertical-center-wrapper
      div.vertical-center
        div#overlay
          //- h3.p1 Choose image source
          //- ul.prompt-choices-vertical
          //-   li#prompt-1 Use camera
          //-   li#prompt-2 Open gallery


  //- Handlebar templates
  include _templates.jade

  //- JS files
  include _scripts.jade
</html>
