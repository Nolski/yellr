div#form-wrapper.form.wrapper.submit-preview


  form.submit-form(method="post", action="'http://yellrdev.wxxi.org/upload_media.json'", accept-charset="utf-8", enctype="multipart/form-data")

    input#client_id(type="text", name="unique_app_id", value="")
    input(type="text", name="media_type", value="text")
    input(type="file", name="media_payload")

  //- text-form
  //-form.submit-form(method="post", action="{{ action_url }}", accept-charset="utf-8", enctype="multipart/form-data")
    div.submit-text
      //- title
      input(type="text", placeholder="Title (optional)")
      //- body text (description)
      textarea(rows="2", columns="10", placeholder="Add description")


  //- photo form
  //-form.submit-form(method="post", action="{{ action_url }}", accept-charset="utf-8", enctype="multipart/form-data")
    div.submit-photo
      //- description
      //- image
      textarea(rows="2", columns="10", placeholder="Add description")
      div.media-submission-wrapper
        div.media-preview
          i.fa.fa-close
          img(src="http://lorempixel.com/400/200")#img-preview
        div.media-options
          span.add-more-media.flex-1#add-more-media-btn
            i.fa.fa-plus
          //-div#media-input-wrapper
              input(type="file")


  //- video form
  //-form.submit-form(method="post", action="{{ action_url }}", accept-charset="utf-8", enctype="multipart/form-data")
    div.submit-video
      //- description
      //- thumbnail preview
      textarea(rows="2", columns="10", placeholder="Add description")
      div.media-submission-wrapper
        div.media-preview
          i.fa.fa-close
          i.fa.fa-video-camera


  //- audio
  //-form.submit-form(method="post", action="{{ action_url }}", accept-charset="utf-8", enctype="multipart/form-data")
    div.submit-audio
      //- audio timeline preview?..
      //- description / title
      textarea(rows="2", columns="10", placeholder="Add description")
      div.media-submission-wrapper
        div.media-preview
          i.fa.fa-close
          i.fa.fa-microphone



div.templates
  script#text-form(type="text/x-handlebars-template")
    <form method="post" action="{{ action_url }}" accept-charset="utf-8" enctype="multipart/form-data" class="submit-form"> <div class="submit-text">
    <input type="hidden" name="client_id" value="12345678">
    <input type="hidden" name="media_type" value="text">
    <input type="text" name="caption" placeholder="Title (optional)"/>
    <textarea name="media_text" rows="2" columns="10" placeholder="Add description"></textarea>
    </div> </form>
