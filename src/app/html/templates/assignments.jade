//- assignment list <li>
script#assignments-li(type="text/x-handlebars-template").
  {{#if assignments}}
    {{#each assignments}}
    <li>
      <h2 class="assignment-title">
        <a href="#view-assignment/{{ @index }}">{{ question_text }}</a>
      </h2>
      <div class="assignment-action">
        <p class="view-assignment-details"><a href="#view-assignment/{{ @index }}">{{view_assignment}}</a></p>
        <p class="assignment-organization">{{ organization }}</p>
      </div>
      <p class="assignment-deadline" data-deadline-text="{{ deadline_text }}: ">{{ expire_datetime }}</p>
    </li>
    {{/each}}
  {{else}}
    <li class="no-assignments-li">
      <h2 class="assignment-title">{{no_assignments_yet}}</h2>
      <p>{{check_back_later_for_assignments}}</p>
    </li>
  {{/if}}


//- single view
script#assignment-view(type="text/x-handlebars-template").
  <h2 class="assignment-title">{{title}}</h2>
  {{#if image }}
  <figure class="assignment-details-image"><img src="{{image}}"/></figure>
  {{/if}}
  <p class="assignment-details">{{ description }}</p>
  <p class="assignment-deadline">{{ deadline }}</p>
  {{#if survey}}
  <a href="#report/reply-survey/{{id}}" class="contribute-to-assignment">{{contribute_text}}</a>
  {{/if}}
  {{#if free_text}}
  <a href="#report/reply-text/{{id}}" class="contribute-to-assignment">{{contribute_text}}</a>
  {{/if}}
