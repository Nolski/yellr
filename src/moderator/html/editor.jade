div#editor-container
  header.editor-header.header-with-controls
    h2.h1 Write Article
    nav.article-controls
      span#preview-btn Preview
      span#save-draft-btn Save Draft
      span#post-btn Post

  div.editor-workspace.flex
    div.flex-2
      div.editor-input
        span.h3 Title
        input#article-title(type="text", name="title", placeholder="Article title...")
      div.editor-input
        span.h3 Body
        textarea#article-body(rows="15", name="body", placeholder="Write article")
      div.editor-input
        span.h3 Article Preview
        textarea#article-preview(rows="5", name="top-text", placeholder="Preview Required")

    div.flex-1
      p.h4#geo-fence-btn Geo-Fence
      div.collection-area
        p.h4 Collection
        p.current-collection Seinfeld
          span.block Change
        ul.collection-list
          li
            img(src="/media/13b1d2d9-6ce4-4c45-aab0-fa3d1086367f.jpg")
          li
            img(src="/media/13b1d2d9-6ce4-4c45-aab0-fa3d1086367f.jpg")
          li
            img(src="/media/13b1d2d9-6ce4-4c45-aab0-fa3d1086367f.jpg")
          li
            img(src="/media/13b1d2d9-6ce4-4c45-aab0-fa3d1086367f.jpg")


  div#templates
    //- template used while writing article
    //- where we have the collection on the side
    //- ===================================
    //- used on: editor.html
    script#collections-li-template(type="text/x-handlebars-template").
      {{#if collection}}
        {{#each collection}}
        <li>
          {{#each media_objects }}
          <div class="media-preview" data-type="{{ media_type }}">
            {{#if file_name}}
            <figure class="media-file-image">
              <img src="/media/{{file_name}}" alt="{{ media_description }}">
              <figcaption>{{ media_description }}</figcaption>
            </figure>
            {{else}}
            <p class="media-text">{{ media_text }}</p>
            {{/if}}

            {{#if caption}}
            <p>{{ caption }}</p>
            {{/if}}
          </div>
          {{/each }}
          <div class="assignment-collection-actions"><span class="remove-btn"><i class="fa fa-close">&nbsp;Remove</i></span></div>
          <div data-post-id="{{post_id}}" data-source="anonymous" data-uid="{{ client_id }}" class="meta-div"></div>
        </li>
        {{/each}}
      {{else}}
        <li class="faded">
          <h3 class="t2">Collection is empty</h3>
          <p>Drag a Response from the left over here, or click the&nbsp;<span class="fa fa-plus"></span>&nbsp;icon</p>
        </li>
      {{/if}}
