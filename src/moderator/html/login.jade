doctype html
head
  title Yellr - Moderator backend
  meta(name="description", content="Yellr backend moderation - Citizen engagement and journalism app")
  link(rel="stylesheet", href="style/style.min.css")

body#moderator.login(data-page="login")
  div.container
    div.vertical-center-wrapper
      div.vertical-center
        div.mod-login-wrapper
          h1 Yellr
          p Communicate with your community
          form#mod-login.form
            p#login-feedback

            label
              span.block Username
              input(type="text", name="user_name")
            label
              span.block Password
              input(type="password", name="password")
            label.block
              input(type="submit", value="Login").inline-block

  include _scripts.jade
</html>
